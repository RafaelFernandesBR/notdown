@{
    ViewData["Title"] = "Visualizar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <button id="editButton" class="btn btn-primary mb-3" data-nota-id="@ViewBag.Nota.id">Editar</button>

            <div id="viewMode">
                @NoteDown.Markdown.Markdown.ParseHtmlString(ViewBag.Nota.conteudo)
            </div>

            <div id="editMode" style="display: none;">
                <textarea id="editTextArea" class="form-control mb-3" rows="4">@ViewBag.Nota.conteudo</textarea>
                <button id="saveButton" class="btn btn-success mr-2">Salvar</button>
                <button id="cancelButton" class="btn btn-secondary">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/editNots.js"></script>
