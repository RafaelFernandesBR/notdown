@{
    ViewData["Title"] = "Criar";
}

<div class="container mt-4">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="editar-tab" data-toggle="tab" href="#editar">Editar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="visualizar-tab" data-toggle="tab" href="#visualizar">Visualizar</a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Guia de Edição -->
        <div class="tab-pane fade show active" id="editar">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h2>Criar nota</h2>
                    <p>Crie sua nota/anotação nesta página.</p>

                    <form method="post" action="/save">
                        <div class="form-group">
                            <label for="nota">Nota:</label>
                            <textarea class="form-control" id="nota" name="nota" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Guia de Visualização -->
        <div class="tab-pane fade" id="visualizar">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div id="visualizacao-markdown"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/marked/2.1.3/marked.min.js"></script>
<script src="~/js/viewNots.js"></script>
